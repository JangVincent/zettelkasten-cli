    "format:check": "prettier --check 'src/**/*.ts'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "commander": "^14.0.2"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
