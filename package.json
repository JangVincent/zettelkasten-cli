{
  "name": "zettelkasten-cli",
  "version": "0.1.0",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "zettel": "./bin/zettel"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile zettel",
